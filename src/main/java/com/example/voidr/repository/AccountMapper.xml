<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.voidr.repository.AccountMapper">

	<!-- 結果マッピング -->
	<resultMap id="AccountMap"
		type="com.example.voidr.entity.Account">
		<id property="id" column="id" />
		<result property="username" column="username" />
		<result property="password" column="password" />
		<result property="authority" column="authority" />
		<result property="displayName" column="display_name" />
		<result property="email" column="email" />
		<result property="address" column="address" />
		<result property="phoneNumber" column="phone_number" />
		<result property="createdAt" column="created_at" />
		<result property="updatedAt" column="updated_at" />
	</resultMap>

	<!-- ユーザー検索 -->
	<select id="selectByUsername" parameterType="string"
		resultMap="AccountMap">
		SELECT
		id,
		username,
		password,
		authority
		FROM
		login_user
		WHERE
		username = #{username}
	</select>

	<!-- 新規登録 -->
	<insert id="insertAccount"
		parameterType="com.example.voidr.entity.Account"
		useGeneratedKeys="true" keyProperty="id">
		INSERT INTO login_user (username, password, authority, displayname)
		VALUES (#{username}, #{password}, #{authority}, #{username})
	</insert>

</mapper>

