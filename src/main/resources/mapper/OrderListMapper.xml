<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.voidr.repository.OrderListMapper">

	<!-- ========================================================= -->
	<!-- 購入履歴一覧（ユーザーIDで複数行） -->
	<!-- ========================================================= -->
	<select id="findByUserId" parameterType="long"
		resultType="com.example.voidr.entity.OrderList">
		SELECT
		id,
		user_id,
		created_at,
		updated_at
		FROM order_list
		WHERE
		user_id = #{userId}
		ORDER BY created_at DESC, id DESC
	</select>

	<!-- ========================================================= -->
	<!-- 新しい購入履歴（注文リスト）を作成 -->
	<!-- ========================================================= -->
	<insert id="insertOrderList"
		parameterType="com.example.voidr.entity.OrderList"
		useGeneratedKeys="true" keyProperty="id">
		INSERT INTO order_list (
		user_id,
		created_at,
		updated_at
		) VALUES (
		#{userId},
		CURRENT_TIMESTAMP,
		CURRENT_TIMESTAMP
		)
	</insert>

	<!-- ========================================================= -->
	<!-- ユーザー名から注文リストを取得（複数件対応） -->
	<!-- ========================================================= -->
	<!-- ユーザー名から注文リストを取得（複数件対応） -->
	<select id="findByUserName" parameterType="String"
		resultType="com.example.voidr.entity.OrderList">
		SELECT ol.*
		FROM order_list ol
		JOIN login_user u ON ol.user_id = u.id
		WHERE u.username = #{username}
		ORDER BY ol.created_at DESC, ol.id DESC
	</select>


</mapper>
