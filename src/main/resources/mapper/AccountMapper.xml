<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.voidr.mapper.AccountMapper">

	<!-- 結果マッピング -->
	<resultMap id="AccountMap"
		type="com.example.voidr.entity.Account">
		<id property="id" column="id" />
		<result property="username" column="username" />
		<result property="password" column="password" />
		<result property="authority" column="authority" />
		<result property="displayName" column="display_name" />
		<result property="email" column="email" />
		<result property="address" column="address" />
		<result property="phoneNumber" column="phone_number" />
		<result property="createdAt" column="created_at" />
		<result property="updatedAt" column="updated_at" />
	</resultMap>
	
	
	<!-- 10/27 追加 谷口  -->
  <!-- ユーザー名で1件取得（ログイン用） -->
  <select id="selectByUsername" parameterType="string" resultMap="AccountMap">
    SELECT
      id,
      username,
      password,
      authority,
      display_name,
      email,
      address,
      phone_number,
      created_at,
      updated_at
    FROM login_user
    WHERE username = #{username}
    LIMIT 1
  </select>

  <!-- 新規登録：email は必須、address/phone_number は任意（存在時のみ列を追加） -->
  <insert id="insertAccount"
          parameterType="com.example.voidr.entity.Account"
          useGeneratedKeys="true" keyProperty="id">
    INSERT INTO login_user
    <trim prefix="(" suffix=")" suffixOverrides=",">
      username,
      password,
      authority,
      display_name,
      email,
      <if test="address != null">address,</if>
      <if test="phoneNumber != null">phone_number,</if>
    </trim>
    <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
      #{username},
      #{password},
      #{authority}::role,
      #{displayName},
      #{email},
      <if test="address != null">#{address},</if>
      <if test="phoneNumber != null">#{phoneNumber},</if>
    </trim>
  </insert>


</mapper>

