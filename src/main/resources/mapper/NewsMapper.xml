<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.voidr.repository.NewsMapper">

  <!-- 最新3件を取得 -->
  <select id="findLatest3" resultType="com.example.voidr.entity.News">
    SELECT id, news_date, content
    FROM news
    ORDER BY id DESC
    LIMIT 3
  </select>

  <!-- 1件追加 -->
  <insert id="insert">
    INSERT INTO news (news_date, content)
    VALUES (#{newsDate}, #{content})
  </insert>
  
  <!-- 全件取得（管理画面用） -->
  <select id="findAll" resultType="com.example.voidr.entity.News">
    SELECT id, news_date, content
    FROM news
    ORDER BY id DESC
  </select>

</mapper>