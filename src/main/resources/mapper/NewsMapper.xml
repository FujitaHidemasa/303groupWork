<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.voidr.repository.NewsMapper">

  <!-- 最新3件を取得 -->
  <select id="findLatest3" resultType="com.example.voidr.entity.News">
    SELECT id, news_date, content
    FROM news
    ORDER BY news_date DESC, id DESC
    LIMIT 3
  </select>

  <!-- 1件追加 -->
  <insert id="insert">
    INSERT INTO news (news_date, content)
    VALUES (#{newsDate}, #{content})
  </insert>
  
  <!-- 全件取得（管理画面用） -->
  <select id="findAll" resultType="com.example.voidr.entity.News">
    SELECT id, news_date, content
    FROM news
    ORDER BY news_date DESC, id DESC
  </select>

	<!-- ★追加：ID指定で1件取得 -->
	<select id="findById" parameterType="int"
		resultType="com.example.voidr.entity.News">
		SELECT id, news_date, content
		FROM news
		WHERE id = #{id}
	</select>

	<!-- ★追加：1件更新 -->
	<update id="update"
		parameterType="com.example.voidr.entity.News">
		UPDATE news
		SET
		news_date = #{newsDate},
		content = #{content}
		WHERE id = #{id}
	</update>

	<!-- ★追加：1件削除 -->
	<delete id="delete" parameterType="int">
		DELETE FROM news
		WHERE id = #{id}
	</delete>

</mapper>